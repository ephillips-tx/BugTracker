@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="card login-panel-2 p-4 text-dark">
    <div class="my-auto">
        <p class="h6 text-secondary">Login to your account</p>
    </div>
    <div class="mt-3">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="py-2">
                <div class="checkbox small">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-warning text-white">Log in</button>
            </div>
            <div class="py-2 text-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small"><i class="bi bi-lock-fill text-secondary"></i>Forgot password?</a>
                </p>
                <p>
                    Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none small">Register</a>
                </p>
                @*<p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>*@
            </div>
        </form>
        <div class="text-center">
            <div class="py-1 fw-bold text-secondary">------------------ &nbsp; OR &nbsp; ------------------</div>
            <div>
                <a asp-action="" asp-controller="" asp-route-id="" class="btn btn-sm btn-warning text-white my-2">Demo PM</a>
                <a asp-action="" asp-controller="" asp-route-id="" class="btn btn-sm btn-warning text-white my-2">Demo Dev</a>
                <a asp-action="" asp-controller="" asp-route-id="" class="btn btn-sm btn-warning text-white my-2">Demo New User</a>
                <a asp-action="" asp-controller="" asp-route-id="" class="btn btn-sm btn-warning text-white my-2">Demo Admin</a>
                <a asp-action="" asp-controller="" asp-route-id="" class="btn btn-sm btn-warning text-white my-2">Demo Submitter</a>
            </div>
        </div>
    </div>
</div>

