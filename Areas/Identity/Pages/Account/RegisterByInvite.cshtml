@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["CurrentPath"] = "New Member";
}


<div class="col-12 my-4">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-light me-4">
        <h2>Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control bg-dark text-light" value='@ViewData["Email"]' autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.FirstName" class="form-control bg-dark text-light" value='@ViewData["FirstName"]' autocomplete="username" aria-required="true" />
            <label asp-for="Input.FirstName"></label>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.LastName" class="form-control bg-dark text-light" value='@ViewData["LastName"]' autocomplete="username" aria-required="true" />
            <label asp-for="Input.LastName"></label>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input class="bg-dark form-control text-light" aria-required="true" value='@ViewData["CompanyName"]' disabled />
            <input asp-for="Input.CompanyId" value='@ViewData["CompanyId"]' hidden />
            <label asp-for="Input.CompanyId"></label>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control bg-dark text-light" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button id="registerSubmit" asp-route-inviteId='@ViewData["InviteId"]' type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
